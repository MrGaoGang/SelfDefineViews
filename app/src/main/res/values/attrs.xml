<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--雷达菜单-->
    <declare-styleable name="RadarMenuView">
        <attr name="position">
            <enum name="left_top" value="0"/>
            <enum name="left_bottom" value="1"/>
            <enum name="right_top" value="2"/>
            <enum name="right_bottom" value="3"/>
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <!--折线图-->
    <declare-styleable name="SimpleChartView">
        <attr name="lineColor" format="color"/>
        <attr name="pointColor" format="color"/>
    </declare-styleable>

    <!--方向盘进度条-->
    <declare-styleable name="PanelCircleView">
        <attr name="centerTextSize" format="dimension"/>
        <attr name="minCenterCircleRadius" format="dimension"/>
        <attr name="outArcColor" format="color"/>
        <attr name="fillColor" format="color"/>
        <attr name="emptyColor" format="color"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="pointerColor" format="color"/>
        <attr name="scaleLength" format="dimension"/>
        <attr name="scaleCount" format="integer"/>
        <attr name="totalAngle" format="integer"/>
    </declare-styleable>

    <!-- 仿华为圆形加载进度条 -->
    <declare-styleable name="HuaWeiProgressView">
        <attr name="progressColor" format="color"/>
        <attr name="baseColor" format="color"/>
        <attr name="dotColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <!--仿愤怒小鸟弹弓-->
    <declare-styleable name="FlyBirdJumpView">
        <attr name="centerLineColor" format="color"/>
        <attr name="pointrColor" format="color"/>
    </declare-styleable>

    <!--水波纹进度条-->
    <declare-styleable name="WaterProgressView">
        <attr name="outProColor" format="color"/>
        <attr name="outBaseColor" format="color"/>
        <attr name="firstWaterColor" format="color"/>
        <attr name="secondWaterColor" format="color"/>
        <attr name="waterTextSize" format="dimension"/>
        <attr name="waterTextColor" format="color"/>
        <attr name="waveCount" format="integer"/>
        <attr name="waveRange" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="QQBubbleView">
        <attr name="bubbleColor" format="color"/>
        <attr name="bubbleTextColor" format="color"/>
        <attr name="maxDistance" format="dimension"/>
        <attr name="bubbleRadius" format="dimension"/>
    </declare-styleable>


</resources>
